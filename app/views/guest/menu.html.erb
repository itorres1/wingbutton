<div id="menu-contents">

  <div id="restaurant-info">
    <p>
      <h1><%= @details['name'] %></h1>
      <span id="address"><%= @details['addr'] %> - <%= @details['city'] %>, <%= @details['state'] %></span>
      <br><%= @details['cs_contact_phone'] %>
    </p>
    <hr>
  </div>

  <div class="menu-items">
  </div>

  <div id="tray">
    <b>Order Tray</b>
    <hr>
    <br />
  </div>

  <div id="map-canvas"></div>

  <div id="guest-info">
    <h2>Guest checkout</h2>
    <form action="/guest/final" method="POST">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <label>
        First name
        <input type="string" name="first_name" />
      </label>
      <label>
        Last name
        <input type="string" name="last_name" />
      </label>
      <label>
        Address
        <input type="string" name="addr" />
      </label>
      <label>
        City
        <input type="string" name="city" />
      </label>
      <label>
        State
        <input type="string" name="state" />
      </label>
      <label>
        Zip
        <input type="string" name="zip" />
      </label>
      <label>
        Phone
        <input type="string" name="phone" />
      </label>
      <label>
        Email
        <input type="string" name="em" />
      </label>
      <label>
        Full name
        <input type="string" name="card_name" />
      </label>
      <label>
        Card number
        <input type="string" name="card_number" />
      </label>
      <label>
        Card cvc
        <input type="string" name="card_cvc" />
      </label>
      <label>
        Expiration
        <input type="string" name="card_expiry" />
      </label>
      <label>
        Billing
        <input type="string" name="card_bill_addr" />
      </label>
      <label>
        City
        <input type="string" name="card_bill_city" />
      </label>
      <label>
        State
        <input type="string" name="card_bill_state" />
      </label>
      <label>
        Zip
        <input type="string" name="card_bill_zip" />
      </label>
      <label>
        Phone
        <input type="string" name="card_bill_phone" />
      </label>
      <div id="checkout-button"><input class="enter-wings" type="submit" value="Submit Order" /></div>
    </form>
  </div>
  <div id="bottom-clear"></div>

  <script>
  window.WingButton = {};
  //WingButton.fullMenu;
  // WingButton.wings = [];
  WingButton.wingTray = {};
  WingButton.wingMenu = [];
  WingButton.wingOptions = [];
  $('#all-content').css("background-color", "white");
  WingButton.currentMenuURL = "/guest/menu/<%=@details['restaurant_id']%>";
  </script>

</div>


